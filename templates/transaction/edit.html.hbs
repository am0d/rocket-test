{{#*inline "page"}}
<h4>Create a new period!</h4>
{{#if flash}}
<div class="text-danger">{{flash}}</div>
{{/if}}
<form class="form" method="POST" action="/periods/{{model.id}}/edit">
    <input type="hidden" name="id" id="id" value="{{model.id}}" />
    <div class="form-group">
        <label for="name">
            Name
        </label>
        <input name="name" id="name" value="{{model.name}}" placeholder="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="start_date">
            Start Date
        </label>
        <input name="start_date" id="start_date" value="{{model.start_date}}" placeholder="Start Date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
{{/inline}}{{~> layout ~}}