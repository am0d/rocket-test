{{#*inline "page"}}
<h4>Create a new transaction!</h4>
{{#if flash}}
<div class="text-danger">{{flash}}</div>
{{/if}}
<form class="form" method="POST" action="/transaction/{{model.id}}/edit">
    <input type="hidden" name="id" id="id" value="{{model.id}}" />
    <div class="form-group">
        <label for="name">
            Description
        </label>
        <input name="description" id="description" value="{{model.description}}" placeholder="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="date">
            Date
        </label>
        <input name="date" id="date" value="{{model.date}}" placeholder="Start Date" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
{{/inline}}{{~> layout ~}}